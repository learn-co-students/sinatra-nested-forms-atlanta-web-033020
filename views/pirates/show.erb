<h1>Pirates</h1>

<div class="pirate">
<ul>Name: <%= @pirate.name %></ul>
<ul>Weight: <%= @pirate.weight %></ul>
<ul>Height: <%= @pirate.height %></ul>

<h1>Ships</h1>
<% @ships.each do |ship| %>
<div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>
